<header
  class="page-header"
  style="background-image: url(/public/images/page_bgs/contact.jpeg)"
>
  <div class="container">
    <strong> <%= get_lang()["header"]["contact"][lang] %> </strong>
  </div>
</header>
<section class="contact-informations">
  <div class="container">
    <ul class="informations">
      <li class="information">
        <i class="icon fas fa-map-marker-alt"></i>
        Mehmet Akif, Dilek Sk. No:14/A, 34774 Ümraniye/İstanbul
      </li>
      <li class="information">
        <i class="icon fas fa-envelope"></i>
        <a href="mailto:info@essemotomasyon.com">info@essemotomasyon.com</a>
      </li>
      <li class="information">
        <i class="icon fas fa-phone"></i>
        <a href="tel:+90 549 745 45 92">+90 549 745 45 92</a>
      </li>
    </ul>
  </div>
</section>

<section class="map-and-form">
  <div class="container">
    <div class="map col">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3010.8753741147807!2d29.142094815413973!3d41.00610087930094!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cacf034140c8e5%3A0x3c90f183b207953!2sEssem%20Otomasyon%20M%C3%BChendislik%20Sanayi%20ve%20Ticaret%20Ltd.%20%C5%9Eti.!5e0!3m2!1str!2str!4v1652964557731!5m2!1str!2str"
        loading="lazy"
      ></iframe>
    </div>
    <div class="form col">
      <form action="/contact" method="post">
        <div class="flex">
          <fieldset>
            <input type="text" name="full_name" placeholder="<%=
            get_lang()["contact_form"]["txt_full_name"][lang] %>"
            autocomplete="off" />
          </fieldset>
          <fieldset>
            <input type="email" name="email" placeholder="<%=
            get_lang()["contact_form"]["txt_email"][lang] %>" autocomplete="off"
            />
          </fieldset>
        </div>
        <fieldset>
          <input type="text" name="subject" placeholder="<%=
          get_lang()["contact_form"]["txt_subject"][lang] %>" autocomplete="off"
          />
        </fieldset>
        <fieldset>
          <textarea name="message" rows="5" placeholder="<%=
            get_lang()["contact_form"]["txt_message"][lang] %>"></textarea>
        </fieldset>
        <button type="submit">
          <i class="fas fa-paper-plane"></i>
          <%= get_lang()["contact_form"]["btn_submit"][lang] %>
        </button>
      </form>
    </div>
  </div>
</section>
